class SoundPlayer {	var name:String;	var id:String;	var sound:Sound;	var callback:Function;	var volume:Number = 100;	var mc:MovieClip;	function SoundPlayer(name:String, vol:Number, callback:Function) {		// Setup properties		this.name = name;		this.id = name + ".mp3";		this.volume = typeof vol == "number" ? vol : this.volume;		this.callback = callback;		// Create sound		this.mc = Tools.newMovieClip(null, 0, 0, _root.game.level);		this.sound = new Sound(this.mc);		this.sound.attachSound(this.id);		this.sound.setVolume(this.volume);		this.sound.start();		// Add callback		this.sound["SoundPlayer"] = this;		this.sound.onSoundComplete = this.complete;		if (vol > 100) {			new SoundPlayer(name, vol - 100);		}	}	function setVolume(vol:Number) {		this.volume = vol;		this.sound.setVolume(this.volume);	}	function complete() {		if (typeof this["SoundPlayer"]["mc"] == "object") {			this["SoundPlayer"]["mc"].removeMovieClip();		}		if (typeof this["SoundPlayer"]["callback"] == "function") {			this["SoundPlayer"]["callback"]();		}	}	function remove() {		this.mc.removeMovieClip();		delete this;	}}